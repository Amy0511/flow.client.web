{
  "name": "boomerang.app.workflow",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@boomerang/boomerang-components": "^5.0.8",
    "@boomerang/boomerang-react-scripts": "1.0.1",
    "@boomerang/boomerang-utilities": "^1.0.1",
    "carbon-components": "^9.14.0",
    "carbon-components-react": "^6.32.1",
    "carbon-icons": "^7.0.7",
    "lodash": "^4.17.11",
    "react": "^16.5.1",
    "react-dom": "^16.5.1",
    "react-modal": "^3.5.1",
    "react-toggle": "^4.0.2",
    "react-tooltip": "^3.8.4",
    "storm-react-diagrams": "^5.2.1",
    "validator": "^10.7.1"
  },
  "scripts": {
    "analyze": "source-map-explorer server/build/static/js/main.*",
    "apiServer": "json-server -c api/json-server.json --watch api/db.json api/routes.json",
    "cm": "git cz",
    "dev": "run-p apiServer start",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "browserslist": {
    "development": [
      "last 2 chrome versions",
      "last 2 firefox versions",
      "last 2 edge versions"
    ],
    "production": [
      ">0.25%",
      "not op_mini all",
      "ie 11"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "rules": {
      "body-leading-blank": [
        1,
        "always"
      ],
      "footer-leading-blank": [
        1,
        "always"
      ],
      "header-max-length": [
        2,
        "always",
        72
      ],
      "scope-case": [
        2,
        "always",
        "lower-case"
      ],
      "subject-case": [
        2,
        "never",
        [
          "sentence-case",
          "start-case",
          "pascal-case",
          "upper-case"
        ]
      ],
      "subject-empty": [
        2,
        "never"
      ],
      "subject-full-stop": [
        2,
        "never",
        "."
      ],
      "type-case": [
        2,
        "always",
        "lower-case"
      ],
      "type-empty": [
        2,
        "never"
      ],
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "release",
          "revert",
          "style",
          "test"
        ]
      ]
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --print-width 120 --write",
      "git add"
    ],
    "*.scss": [
      "prettier --write",
      "git add"
    ]
  }
}
